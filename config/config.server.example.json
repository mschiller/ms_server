{
  "recipes": [
    "server::default"
  ],
  "application": {
    "deploy_to": "/srv/apps/"
  },
  "deploy_user": {
      "username": "deploy",
      "password_hash": ""
  },
  "mysql": {
    "server_root_password": "",
    "server_old_root_password": "set before changing root password",
    "bind_address": "",
    "allow_remote_root": false,
    "tunable": {
       "table_cache": "10",
       "max_heap_table_size": "32M",
       "back_log": "5",
       "wait_timeout": "180",
       "key_buffer": "10M",
       "max_connections": "20",
       "net_write_timeout": "30"
    }
  },
  "rbenv": {
    "default_ruby": "1.9.3-rc1",
    "gems" : [
      { "name"    : "bundler",
        "version" : "1.1.rc" },
      { "name"    : "rake",
        "version" : "0.9.2" },
      { "name"    : "vagrant",
        "version" : "0.8.6" },
      { "name"    : "chef",
        "version" : "0.10.4" }
    ]
  }
}
